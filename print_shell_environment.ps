# get environment variables
$env_variables = gci env:

# iterate through each and append to ouput
foreach ($variable in $env_variables) { 
	$output = $output +  $variable.Name + '=' + $variable.Value + "`n"
}

# print output
Write-Host $output
Set-Content -path "c:\test" -value $output